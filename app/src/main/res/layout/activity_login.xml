<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:id="@+id/relative"
    android:background="#ff020202"
    android:longClickable="false"
    android:clickable="false"
    style="@android:style/Holo.ButtonBar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:id="@+id/signin_button"
        android:onClick="signIn"
        android:background="#fdfffbfb"
        android:clickable="true"
        android:textSize="23dp"
        android:textStyle="italic"
        android:layout_alignWithParentIfMissing="false"
        style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textColor="#fffff7fa"
        android:textSize="30dp"
        android:layout_alignTop="@+id/signin_button"
        android:layout_alignBottom="@+id/signin_button" />

